# .ebextensions/python.config

packages:
  yum:
    gcc: []
    gcc-c++: []
    libffi-devel: []
    python3-devel: []
    postgresql-devel: []
    make: []

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: core/wsgi.py  # adjust if your wsgi.py path is different
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: core.settings
    DEBUG: 'False'
    ALLOWED_HOSTS: '.elasticbeanstalk.com'

container_commands:
  c01_install_dependencies:
    command: |
      echo "Installing Python packages..."
      if [ ! -d /var/app/venv ]; then
        python3 -m venv /var/app/venv
      fi
      . /var/app/venv/bin/activate
      pip install --upgrade pip
      if [ -f requirements.txt ]; then
        pip install -r requirements.txt --log /var/log/pip_install.log
      fi
      cat /var/log/pip_install.log

  c02_collect_static:
    command: |
      echo "Collecting Django static files..."
      . /var/app/venv/bin/activate
      cd backend  # adjust if manage.py is in a different folder
      python manage.py collectstatic --noinput
    leader_only: true

  c03_migrate:
    command: |
      echo "Applying Django database migrations..."
      . /var/app/venv/bin/activate
      cd backend  # adjust if manage.py is in a different folder
      python manage.py migrate --noinput
    leader_only: true
