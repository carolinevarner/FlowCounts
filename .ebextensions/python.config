container_commands:
  01_install_requirements:
    command: |
      echo "Installing Python packages..."
      pip install --upgrade pip
      pip install -r /var/app/staging/backend/requirements.txt
  02_collect_static:
    command: |
      echo "Collecting static files..."
      python3 /var/app/staging/backend/manage.py collectstatic --noinput
  03_migrate:
    command: |
      echo "Applying database migrations..."
      python3 /var/app/staging/backend/manage.py migrate --noinput
