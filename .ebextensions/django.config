option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: backend/core/wsgi.py

container_commands:
  01_install_requirements:
    command: "pip install -r backend/requirements.txt"
  02_migrate:
    command: "cd backend && python manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "cd backend && python manage.py collectstatic --noinput"
    leader_only: true
